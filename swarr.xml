// test.data.unityweb parçalarını birleştir
async function mergeDataFileParts() {
    const partUrls = [
        'https://cdn.jsdelivr.net/gh/fnafben/232@main/Build/test.data.part0.unityweb',
        'https://cdn.jsdelivr.net/gh/fnafben/232@main/Build/test.data.part1.unityweb',
        'https://cdn.jsdelivr.net/gh/fnafben/232@main/Build/test.data.part2.unityweb'
    ];
    const blobs = await Promise.all(partUrls.map(url => fetch(url).then(res => res.arrayBuffer())));
    const totalSize = blobs.reduce((sum, b) => sum + b.byteLength, 0);
    const merged = new Uint8Array(totalSize);
    let offset = 0;
    for (const part of blobs) {
        merged.set(new Uint8Array(part), offset);
        offset += part.byteLength;
    }
    return URL.createObjectURL(new Blob([merged], { type: 'application/octet-stream' }));
}
